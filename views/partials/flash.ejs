<% if(success && success.length) {%>
    <div class="mt-3 container-md">
        <div class="alert alert-success alert-dismissible fade show position-relative start-0" role="alert">
            <strong><%= success %></strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
    <% } %>


        <% if(error && error.length) {%>
            <div class="mt-3 container-md">
                <div class="alert alert-danger alert-dismissible fade show position-relative start-0" role="alert">
                    <strong><%= error %></strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
            <% } %>