<% layout('/layout/boilerplate') -%>
    <div class="position-relative bakraundas">

        <p class="bakraundoTextas">Welcome to my blog!</p>
    </div>

    <div class="container-md w-100 mt-3 px-3">
        <div class="row">
            <div class="col-lg-8" style="color: #8a817c; overflow: hidden">
                <% for(let blog of blogPosts) {%>
                    <!-- <img src="/images/pattern.png" alt=""> -->
                    <div class="eilute">
                        <p class="fontas" style="color: rgb(224,190,190)">
                            <%= blog.title %>
                        </p>
                        <p class="fs-3 p-0">
                            <%= blog.subheading %>
                        </p>
                    </div>

                    <%- blog.body %>

                        <% if(!currentUser) {%>
                            <p class="fw-light m-0">Posted by
                                <%= blog.author %>,
                                    <%= blog.date %>
                            </p>
                            <% } %>
                                <% if(currentUser) {%>
                                    <div class="container p-0">
                                        <div class="row m-0">
                                            <div class="col-10 p-0">
                                                <p class="fw-light m-0">Posted by
                                                    <%= blog.author %>,
                                                        <%= blog.date %>
                                                </p>
                                            </div>
                                            <div class="col">
                                                <a href="/edit/<%=blog._id%>" class="btn btn-sm btn-warning my-1 float-end">Edit</a>
                                            </div>
                                        </div>
                                    </div>
                                    <% } %>
                                        <hr class="m-0 mb-5">
                                        <% } %>
            </div>

            <div class="col-lg-4">
                <p class="fs-4 text-center mt-3">About the blog page</p>
                <div style="background: rgb(224, 190, 190); border-radius: 0.4em;" class="mx-4">
                    <img class="card-img-top" style="border-radius: 0.4em 0.4em 0 0;" src="https://images.unsplash.com/photo-1499951360447-b19be8fe80f5?ixid=MnwxMjA3fDB8MHxzZWFyY2h8MTJ8fGJsb2d8ZW58MHx8MHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60" alt="">
                    <p class="fs-5 text-center mb-0 mt-2 fw-bold">Welcome!</p>
                    <p class="fs-6 px-4 pb-3 text-center">Here should be some lorem ipsum text but instead, I will name technologies used for this blog site. The whole application is powered by Node.js and express.js. The database used for storing posts and admin accounts is MongoDB. The
                        admin authentication system is created by using passport npm. I used the TinyMCE WYSIWYG editor for posting the main content text. Styled by SCSS and Boostrap. <br> Greetings, <br>Justas Bacinskas</p>
                </div>

                <div class="container my-5">
                    <div class="row justify-content-between text-center">
                        <div class="col-4">
                            <a href="#"><i class="fab fa-facebook"></i></a>
                        </div>
                        <div class="col-4">
                            <a href="#"><i class="fab fa-instagram"></i></a>
                        </div>
                        <div class="col-4">
                            <a href="#"><i class="fab fa-pinterest"></i></a>
                        </div>
                    </div>
                </div>

                <div class="container">
                    <p class="fs-4 text-dark text-center">Authors</p>
                    <% for(let admin of admins) {%>
                        <div class="row mb-3 py-2" style="background: rgba(224, 190, 190,0.3); border-radius: 0.4em;">
                            <div class="col-4">
                                <% if(!admin.avatarImage.url) {%>
                                    <img src="/images/author.png" class="img-fluid" alt="...">
                                    <% }else{ %>
                                        <div>
                                            <img src="<%= admin.avatarImage.url %>" class="img-fluid" alt="..." style="border-radius: 50%;">
                                        </div>
                                        <% } %>
                            </div>
                            <div class="col-8">
                                <p class="fw-bold mb-0 text-dark">
                                    <%= admin.username %>
                                </p>
                                <p class="text-dark">
                                    <%= admin.aboutMe %>
                                </p>
                            </div>
                        </div>
                        <% } %>
                </div>

            </div>
        </div>
    </div>